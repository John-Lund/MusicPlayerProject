<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPurple"
    tools:context="com.example.android.musicplayerproject.ArtistAcitvity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/artist_back_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/back_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/musicapp_icon_back_blue" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/artist_name_artist_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="6dp"
            android:textAllCaps="true"
            android:textColor="@color/whiteText"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="The Open Doors" />

        <ImageView
            android:id="@+id/artist_image_artist_activity"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="172dp"
            android:contentDescription="@string/a_picture_of_the_artist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/abundant" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/artist_background_layers"
            android:contentDescription="@string/decorative_graphic"
            app:layout_constraintBottom_toBottomOf="@+id/artist_image_artist_activity"
            app:layout_constraintEnd_toEndOf="@+id/artist_image_artist_activity"
            app:layout_constraintStart_toStartOf="@+id/artist_image_artist_activity"
            app:layout_constraintTop_toTopOf="@+id/artist_image_artist_activity" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="296dp"
            android:layout_height="296dp"
            android:contentDescription="@string/decorative_graphic"
            app:layout_constraintBottom_toBottomOf="@+id/artist_image_artist_activity"
            app:layout_constraintEnd_toEndOf="@+id/artist_image_artist_activity"
            app:layout_constraintStart_toStartOf="@+id/artist_image_artist_activity"
            app:layout_constraintTop_toTopOf="@+id/artist_image_artist_activity"
            app:srcCompat="@drawable/artist_background_layers2" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/backgroundPurple"
            android:contentDescription="@string/decorative_graphic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/artist_image_artist_activity"
            app:srcCompat="@drawable/musicapp_icon_mic_peach" />

        <LinearLayout
            android:id="@+id/artist_album_linear_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9">

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>

























